    <profiles>
        <!--linux-->
        <profile>
            <id>system-linux</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <assembly>linux</assembly>
                <systemType>linux</systemType>
            </properties>
            <dependencies>
                <dependency>
                    <groupId>io.thoughtware</groupId>
                    <artifactId>thoughtware-jdk-linux</artifactId>
                    <version>${thoughtware-jdk.version}</version>
                    <type>zip</type>
                    <scope>provided</scope>
                </dependency>
                <dependency>
                    <groupId>io.thoughtware</groupId>
                    <artifactId>thoughtware-postgresql-linux</artifactId>
                    <version>${thoughtware-postgresql.version}</version>
                    <type>zip</type>
                    <scope>provided</scope>
                </dependency>
            </dependencies>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-dependency-plugin</artifactId>
                        <version>2.8</version>
                        <executions>
                            <execution>
                                <id>unpack</id>
                                <phase>compile</phase>
                                <goals>
                                    <goal>unpack</goal>
                                </goals>
                                <configuration>
                                    <artifactItems>
                                        <artifactItem>
                                            <groupId>io.thoughtware</groupId>
                                            <artifactId>thoughtware-jdk-linux</artifactId>
                                            <version>${thoughtware-jdk.version}</version>
                                            <type>zip</type>
                                            <outputDirectory>embbed</outputDirectory>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>io.thoughtware</groupId>
                                            <artifactId>thoughtware-postgresql-linux</artifactId>
                                            <version>${thoughtware-postgresql.version}</version>
                                            <type>zip</type>
                                            <outputDirectory>embbed</outputDirectory>
                                        </artifactItem>
                                    </artifactItems>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

